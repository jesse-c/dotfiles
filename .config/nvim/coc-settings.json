{
  "coc.preferences.codeLens.enable": true,
  "coc.preferences.snippets.enable": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "go",
    "rust",
    "css",
    "Markdown",
    "elm",
    "clojure",
    "clj",
    "js",
    "css",
    "scss"
  ],
  "diagnostic.virtualText": true,
  "diagnostic.checkCurrentLine": true,
  // "diagnostic.errorSign": "",
  // "diagnostic.warningSign": "",
  // "diagnostic.infoSign": "",
  // "diagnostic.hintSign": "",
  "workspace.ignoredFiletypes": [
    "tags"
  ],
  "latex.build.onSave": false,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    },
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    },
    "elmLS": {
      "command": "elm-language-server",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "elm"
      ],
      "rootPatterns": [
        "elm.json"
      ],
      "initializationOptions": {
        "runtime": "node",
        "elmPath": "elm",
        "elmFormatPath": "elm-format",
        "elmTestPath": "elm-test"
      },
      "trace.server": "verbose"
    },
    "clojure-lsp": {
      "command": "bash",
      "args": [
        "-c",
        "clojure-lsp"
      ],
      "filetypes": [
        "clojure",
        "clj"
      ],
      "rootPatterns": [
        "project.clj"
      ],
      "additionalSchemes": [
        "jar",
        "zipfile"
      ],
      "trace.server": "verbose",
      "initializationOptions": {}
    },
    "purescript": {
      "command": "purescript-language-server",
      "args": ["--stdio"],
      "filetypes": ["purescript", "purs"],
      "rootPatterns": ["bower.json", "psc-package.json", "spago.dhall"]
    }
  }
}
