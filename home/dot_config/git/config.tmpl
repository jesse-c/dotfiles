[user]
	name = Jesse Claven
	{{- if ne .chezmoi.os "darwin" }}
	email = {{ .email | quote }}
	signingkey = {{ .signingkey | quote }}
	{{- end }}
[github]
	user = jesse-c
[color]
	ui = true
[core]
	editor = nvim
	excludesfile = ~/.gitignore_global
	autocrlf = input
	pager = delta
[stash]
	showPatch = true
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
[interactive]
	diffFilter = delta --color-only
[add.interactive]
	useBuiltin = false # required for git 2.37.0
[push]
	default = upstream
[commit]
	verbose = true
	gpgsign = true
[pager]
	difftool = true
[diff]
	compactionHeuristic = true
	indentHeuristic = on
	tool = difftastic
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"
[alias]
	ks = difftool -y -t Kaleidoscope
	st = status
	# Prune local and remote origin
	prune-all = "!git prune && git remote prune origin"
	# Stage 0..n files
	gs = "!git ls-files -m -o --exclude-standard | fzf --multi --preview=\"git --no-pager diff {}\" | xargs git add"
	# Unstage 0..n staged files
	gu = "!git diff --name-only --cached | fzf --multi --preview=\"git --no-pager diff {}\" | xargs git reset --"
	# Delete 0..n branches
	bd = "!git branch | cut -c 3- | fzf --multi --preview=\"git log {} --\" | xargs git branch --delete --force"
	sw = switch
	swc = switch -c
	dft = difftool
	sync = "!git fetch origin && git rebase origin/main"
	# The aliases below are from https://gist.github.com/robmiller/6018582
	#
	# Get the current branch name (not so useful in itself, but used in
	# other aliases)
	branch-name = "!git rev-parse --abbrev-ref HEAD"
	# Push the current branch to the remote "origin", and set it to track
	# the upstream branch
	publish = "!git push -u origin $(git branch-name)"
	# Delete the remote version of the current branch
	unpublish = "!git push origin :$(git branch-name)"
[ghq]
	root = ~/src
[url "git@github.com:"]
	insteadOf = https://github.com/
[rebase]
	autosquash = true
[gpg]
	program = gpg
[init]
	defaultBranch = main
[delta]
	navigate = true    # use n and N to move between diff sections
	light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
[filter "lfs"]
       required = true
       clean = git-lfs clean -- %f
       smudge = git-lfs smudge -- %f
       process = git-lfs filter-process
